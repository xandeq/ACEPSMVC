<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="container">
                <div class="row blog">
                    <div class="col-md-12">
                        <div id="blogCarousel" class="carousel slide" data-ride="carousel" data-interval="2000" data- data-pause="hover" data-wrap="true" data->
                            <ol class="carousel-indicators">
                                <li data-target="#blogCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#blogCarousel" data-slide-to="1"></li>
                            </ol>
                            <div class="carousel-inner">
                                @{
                                    var carouselAbertura = "<div class='carousel-item'><div class=row>";
                                    var carouselAberturaAtivo = "<div class='carousel-item active'><div class=row>";
                                    var carouselFechamento = "</div></ div > ";
                                }

                                @for (int i = 0; i < listaDestaquesUnidos.Count(); i++)
                                {
                                    if (i == 0)
                                    {
                                        @Html.Raw(carouselAberturaAtivo)
                                    }
                                    else if (i % 2 == 0 && i != 0)
                                    {
                                        @Html.Raw(carouselFechamento);
                                        @Html.Raw(carouselAbertura);
                                    }

                                    var item = listaDestaquesUnidos[i];
                                    <div class="col-md-6 @i">
                                        @if (!string.IsNullOrWhiteSpace(@item.Url))
                                        {
                                            <a href="@item.Url" target="_blank">

                                                <img class="img-destaques" src="~/destaques/@item.Imagem" alt="Image" />

                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Destaques" asp-action="Detalhes" asp-route-id="@item.Id">
                                                <img class="img-destaques" src="~/destaques/@item.Imagem" alt="Image" />
                                            </a>
                                        }
                                    </div>

                                    if ((i + 1) % 2 == 0)
                                    {
                                        @Html.Raw(carouselFechamento);
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
