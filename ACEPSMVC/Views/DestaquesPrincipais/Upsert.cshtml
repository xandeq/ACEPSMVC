@model ACEPSMVC.Models.DestaquePrincipal

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Editar" : "Criar") DestaquePrincipal</h2>
<br />
<img src="~/destaqueprincipal/bannerdestaque.jpg" />
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Upsert" enctype="multipart/form-data">
            @if (Model.Id != 0)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <br />
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" rows="20" cols="20" asp-for="Imagem" class="text-danger form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label">Endereço</label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Id!=0?"Atualizar":"Criar")
                    </button>
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Voltar para Lista</a>
                </div>
            </div>
        </form>
    </div>
</div>
