@model ACEPSMVC.Models.Usuarios

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Editar" : "Criar") Usuário</h2>
<br />

<div class="border container" style="padding: 30px">
    <div class="text-danger" asp-validation-summary="All"></div>
    <form method="post" asp-controller="Usuarios" asp-action="Upsert">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Nome"></label>
            </div>
            <div class="col-9">
                <input asp-for="Nome" class="form-control text-danger" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NomeUsuario"></label>
            </div>
            <div class="col-9">
                <input asp-for="NomeUsuario" class="form-control text-danger" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Email"></label>
            </div>
            <div class="col-9">
                <input asp-for="Email" class="form-control text-danger" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Senha"></label>
            </div>
            <div class="col-9">
                <input asp-for="Senha" class="form-control text-danger" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id!=0?"Atualizar":"Criar")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Voltar para Lista</a>
            </div>
        </div>
    </form>
</div>
