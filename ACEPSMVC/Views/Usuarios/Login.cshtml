@model ACEPSMVC.Models.Usuarios


    <div class="container">
        <h3 class="text-center text-white pt-5">ACESSO - ÁREA ADMINISTRATIVA</h3>
        <div class="text-danger" asp-validation-summary="All"></div>

        <form asp-controller="Usuarios" asp-action="Login" method="post">
            <h3 class="text-center text-info">Login</h3>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="NomeUsuario"></label>
                <input asp-for="NomeUsuario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" class="form-control" />
            </div>
            <button class="btn btn-primary" type="submit"><i class="fa fa-plus"></i> Entrar</button>
            <div class="col-3 offset-3">
                <a asp-action="Upsert" asp-controller="Usuarios" class="btn btn-info form-control text-white">
                    <i class="fa fa-plus"></i> 
                       Novo Usuário
                </a>
            </div>
        </form>
    </div>