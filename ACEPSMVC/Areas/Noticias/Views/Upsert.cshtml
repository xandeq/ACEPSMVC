@model ACEPSMVC.Models.Noticias

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Editar" : "Criar") Notícia</h2>
<br />

<div class="border container" style="padding: 30px">
    <form method="post" asp-action="Upsert" enctype="multipart/form-data">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Titulo"></label>
            </div>
            <div class="col-9">
                <input asp-for="Titulo" class="form-control text-danger" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Subtitulo"></label>
            </div>
            <div class="col-9">
                <input asp-for="Subtitulo" class="form-control text-danger" />
                <span asp-validation-for="Subtitulo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LinhaFina"></label>
            </div>
            <div class="col-9">
                <textarea asp-for="LinhaFina" rows="5" class="form-control text-danger"></textarea>
                <span asp-validation-for="LinhaFina" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Texto"></label>
            </div>
            <div class="col-9">
                <textarea id="summernote" rows="20" cols="20" asp-for="Texto" class="text-danger"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ImagemDestaque"></label>
            </div>
            <div class="col-9">
                <input type="file" rows="20" cols="20" asp-for="ImagemDestaque" class="text-danger form-control" />
                <span asp-validation-for="ImagemDestaque" class="text-danger"></span>
                @if(Model.Id != 0)
                {
                    <img src="~/noticias/@Model.ImagemDestaque" style="min-width: 20%;max-width: 300px" />
                }
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ImagemInterna"></label>
            </div>
            <div class="col-9">
                <input type="file" rows="20" cols="20" asp-for="ImagemInterna" class="text-danger form-control" />
                <span asp-validation-for="ImagemInterna" class="text-danger"></span>
                @if (Model.Id != 0)
                {
                    <img src="~/noticias/@Model.ImagemInterna" style="min-width: 20%;max-width: 300px" />
                }
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id!=0?"Atualizar":"Criar")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Voltar para Lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <!-- include summernote css/js -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $('.summernote, #summernote').summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true
        });
    </script>
}