@model ACEPSMVC.Models.FormularioDeContato

@{
    string tituloTipo = ViewData["TipoContato"].ToString();
}

<h3>Formulário de @tituloTipo</h3>
<div class="row">
    <!--Grid column-->
    <div class="col-md-9 mb-md-0 mb-5">
        <form asp-action="Index" asp-controller="Contato" method="post">
            <div class="form-group">
                <label asp-for="Nome">Digite seu nome:</label>
                <input class="form-control" type="text" asp-for="Nome" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Digite seu e-mail:</label>
                <input class="form-control" type="text" asp-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Assunto">Assunto: @tituloTipo</label>
            </div>
            <div class="form-group">
                <label asp-for="Mensagem">Digite sua mensagem:</label>
                <textarea class="form-control" asp-for="Mensagem"></textarea>
            </div>
            <input class="btn btn-success" type="submit" value="Enviar!" />
        </form>
    </div>
    <!--Grid column-->
    <div class="col-md-3 text-center">
        <ul class="list-unstyled mb-0">
            <li>
                <i class="fas fa-map-marker-alt fa-2x"></i>
                <p>Rua Saldanha Marinho, 63 - Salas 1 e 2, Centro - Porto Seguro - BA</p>
            </li>

            <li>
                <i class="fas fa-phone mt-4 fa-2x"></i>
                <p>(73) 99170-2845</p>
            </li>

            <li>
                <i class="fas fa-envelope mt-4 fa-2x"></i>
                <p>contato@aceportoseguro.com.br</p>
            </li>
        </ul>
    </div>
    <!--Grid column-->
</div>