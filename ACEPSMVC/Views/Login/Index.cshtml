@model ACEPSMVC.Models.Usuarios

<h1 class="bg-info text-white">ACESSO - ÁREA ADMINISTRATIVA</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-controller="Usuarios" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="NomeUsuario"></label>
        <input asp-for="NomeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Entrar</button>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Usuarios" class="btn btn-info form-control text-white">
            Registrar novo usuario
        </a>
    </div>
</form>