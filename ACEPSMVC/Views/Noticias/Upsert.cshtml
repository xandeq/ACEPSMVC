@model ACEPSMVC.Models.Noticias

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Editar" : "Criar") Notícia</h2>
<br />

<div class="border container" style="padding: 30px">
    <form method="post" asp-action="Upsert">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Titulo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Titulo" class="text-danger" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Subtitulo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Subtitulo" class="text-danger" />
                <span asp-validation-for="Subtitulo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LinhaFina"></label>
            </div>
            <div class="col-6">
                <input asp-for="LinhaFina" class="text-danger" />
                <span asp-validation-for="LinhaFina" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id!=0?"Atualizar":"Criar")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Voltar para Lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}